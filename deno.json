{
  "name": "@fishing/upstate-ny",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write --unstable-kv src/main.ts",
    "dev:frontend": "cd frontend && deno task dev",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write --unstable-kv",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@shared/": "./src/",
    "@hono/hono": "jsr:@hono/hono@^4",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/datetime": "jsr:@std/datetime@^0.225",
    "@std/testing/bdd": "jsr:@std/testing@1/bdd",
    "zod": "npm:zod@^3.23"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "exclude": ["README.md"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["frontend/_fresh"]
  }
}
