{
  "info": {
    "name": "Upstate Fishing API",
    "description": "API for fishing conditions and hatch predictions in Upstate NY/NJ",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Streams",
      "item": [
        {
          "name": "List All Streams",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/streams",
              "host": ["{{baseUrl}}"],
              "path": ["api", "streams"]
            }
          }
        },
        {
          "name": "Streams by Region (Catskills)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/streams?region=catskills",
              "host": ["{{baseUrl}}"],
              "path": ["api", "streams"],
              "query": [
                {"key": "region", "value": "catskills"}
              ]
            }
          }
        },
        {
          "name": "Streams by State (NY)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/streams?state=NY",
              "host": ["{{baseUrl}}"],
              "path": ["api", "streams"],
              "query": [
                {"key": "state", "value": "NY"}
              ]
            }
          }
        },
        {
          "name": "Get Stream (Beaverkill)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/streams/beaverkill",
              "host": ["{{baseUrl}}"],
              "path": ["api", "streams", "beaverkill"]
            }
          }
        },
        {
          "name": "Stream Conditions (Beaverkill)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/streams/beaverkill/conditions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "streams", "beaverkill", "conditions"]
            }
          }
        }
      ]
    },
    {
      "name": "Hatches",
      "item": [
        {
          "name": "List All Hatches",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/hatches",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hatches"]
            }
          }
        },
        {
          "name": "Hatches by Order (Mayfly)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/hatches?order=mayfly",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hatches"],
              "query": [
                {"key": "order", "value": "mayfly"}
              ]
            }
          }
        },
        {
          "name": "Hatches by Month (April)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/hatches?month=4",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hatches"],
              "query": [
                {"key": "month", "value": "4"}
              ]
            }
          }
        },
        {
          "name": "Get Hatch (Hendrickson)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/hatches/hendrickson",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hatches", "hendrickson"]
            }
          }
        }
      ]
    },
    {
      "name": "Stations",
      "item": [
        {
          "name": "Get Station (Beaverkill - 01420500)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/stations/01420500",
              "host": ["{{baseUrl}}"],
              "path": ["api", "stations", "01420500"]
            }
          }
        }
      ]
    },
    {
      "name": "Predictions",
      "item": [
        {
          "name": "Predict Hatches (April Hendrickson)",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/predict",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predict"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"waterTempF\": 54,\n  \"airTempF\": 58,\n  \"cloudCoverPercent\": 80,\n  \"date\": \"2024-04-15T14:00:00Z\"\n}"
            }
          }
        },
        {
          "name": "Predict Hatches (Fall BWO)",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/predict",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predict"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"waterTempF\": 50,\n  \"airTempF\": 52,\n  \"cloudCoverPercent\": 90,\n  \"precipProbability\": 40,\n  \"date\": \"2024-10-10T14:00:00Z\"\n}"
            }
          }
        }
      ]
    }
  ]
}
